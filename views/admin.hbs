<h1>{{title}}</h1>
{{#if isAdmin}}
	<div class="wrapper">
		<form class="row" action="admin" method="post">
			<div class="first">
				Select Player: 
				<br>
				<select id="select" name="user" size="10">
					{{#each players}}
						<option> {{this}} </option>
					{{/each}}		
				</select>
			</div>
			<div class="second">
				Select Operation: 
				<br>
				<select id="select" name="operation" size="10" width="10">
					<option name="delete">Delete</option>
					<option name="setxp">Set XP</option>
					<option name="takexp">Take XP</option>
					<option name="givexp">Give XP</option>
				</select>
			</div>
			<div class="third">
				Additional arguments:
				<br>
				<input name="args" type="text">
				<br>
				<input name="confirm" type="checkbox">
				Confirm 
				<br>
				<button type="submit">
				Go
				</button>
			</div>
		</form>
	</div>
{{else}}
	You must be an admin to see this area!
{{/if}}
