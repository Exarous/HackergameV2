<h1>{{title}}</h1>
{{#if isAdmin}}
	<form action="admin" method="post">
		<div style="display: inline-block">
			Select Player: 
			<br>
			<select id="" name="user" size="10">
				{{#each players}}
					<option> {{this}} </option>
				{{/each}}		
			</select>
		</div>
		<div style="display: inline-block">
			Select Operation: 
			<br>
			<select id="" name="operation" size="10">
				<option> Delete </option>
			</select>
		</div>
		<div style="display: inline-block">
			<input type="checkbox">
			Confirm 
			<br>
			<button type="submit">
			Go
			</button>
		</div>
	</form>
{{else}}
	You must be an admin to see this area!
{{/if}}
